                    <h1>HM Courts &amp; Tribunals Service</h1> 
                </div>
                    <div id="leaflet-title">
                        <h1>Local Information Ex104</h1>
                    </div>
                    <div style="clear:both;"></div>
                </div>

            <a class="button"href="javascript:window.print()">print this leaflet</a>

            {% include "courts/leaflets/_court.jinja" %}
            {% include "courts/leaflets/_contacts.jinja" %}
            {% include "courts/leaflets/_email.jinja" %}
            {% include "courts/leaflets/_opening.jinja" %}
            {% include "courts/leaflets/_facilities.jinja" %}
            {% include "courts/leaflets/_help.jinja" %}
            {% include "courts/leaflets/_additional.jinja" %}
