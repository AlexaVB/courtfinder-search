{% load static %}
{% if court.facilities %}
  <div class='court'>
    <div id='facilities'>
    <h2>Facilities</h2>    
      <ul>
        {% for facility in court.facilities %}
          <li>
            <span class="icon">
              <img src="{% static facility.image_src %}" class="{{ facility.image_class }}" alt="{{ facility.image_description }}">
            </span>
            <span class="facility">{{ facility.description|default:""|striptags }}</span>
          </li>
        {% endfor %}
        </ul>
    </div>
  </div>
{% endif %}
