{% extends "layout/base.jinja" %}

{% block page_title %}Courts and Tribunals{% endblock %}

{% block content %}
<div id="global-breadcrumb" class="header-context">
  <ol role="breadcrumbs" class="group">
    <li><a href="{% url 'staticpages:home' %}">Home</a></li>
    <li><a href="{% url 'search:search-view' %}">Find a court or tribunal</a></li>
  </ol>
</div>

<div id="search-index-page" class="content inner cf">
  <header class="page-header">
    <h1>Courts and Tribunals</h1>
  </header>

  <p>Browse by name of court or tribunal</p>

  <nav role='navigation' class="a-z-navigation">
    <ul>
      {% for letter in letters %}
      <a href="{% url 'courts:list-view' letter %}"><li>{{ letter }}</li></a>
      {% endfor %}
    </ul>
  </nav>

  <h2 class="clear letterheader">{{ letter }}</h2>

  {% if courts %}
  <ul>
    {% for court in courts %}
      <li><a href="{% url 'courts:court-view' court.slug %}">{{ court.name }}</a></li>
    {% endfor %}
  </ul>
  {% else %}
  <p>There are no courts starting with that letter.</p>
  {% endif %}

  <nav role='navigation' class="a-z-navigation">
    <ul>
      {% for letter in letters %}
      <a href="{% url 'courts:list-view' letter %}"><li>{{ letter }}</li></a>
      {% endfor %}
    </ul>
  </nav>

</div>



{% endblock %}
