{% extends "layout/base.jinja" %}

{% block page_title %}Find a court or tribunal{% endblock %}

{% block content %}
  <div id="global-breadcrumb" class="header-context">
    <ol role="breadcrumbs" class="group">
      <li><a href="https://www.gov.uk">Home</a></li>
      <li><a href="https://www.gov.uk/browse/justice">Crime, justice and the law</a></li>
      <li><a href="/">Find a court or tribunal</a></li>
      <li>
    </ol>
  </div>
  <div class="content inner cf">
    <header class="page-header">
      <h1>Find a court or tribunal</h1>
    </header>
    <div class="group">
      <h2>Choose the type of search you would like to do</h2>
      <form method="get" action="/search/type">
        <fieldset>
          <label for="name-address-search" class="block-label form-block">
            <input id="name-address-search" type="radio" name="type" value="address" >
            <div class="form-label-bold">Name or address</div>
            <div class="form-hint">Find courts or tribunals by entering court name, building name, or street address.</div>
          </label>
          <label for="postcode-search" class="block-label form-block">
            <input id="postcode-search" type="radio" name="type" value="postcode" >
            <div class="form-label-bold">Nearest to your postcode</div>
            <div class="form-hint">Find courts and tribunals in your postcode area.</div>
          </label>
          <label for="list-view" class="block-label form-block">
            <input id="list-view" type="radio" name="type" value="list" checked>
            <div class="form-label-bold">A-Z list</div>
            <div class="form-hint">Browse courts and tribunals by name.</div>
          </label>
        </fieldset>
        <div class="actions">
          <button id="continue" class="button" type="submit">Continue</button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
